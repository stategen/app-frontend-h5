{
  "compilerOptions": {
    "module": "es5",
    "target": "es6",
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "allowJs": false,
    "lib": ["es2017","dom"],

    "moduleResolution": "node",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      /*for webstorm*/
      "@apis/*":  ["src/facade/apis/*"],
      "@enums/*": ["src/facade/enums/*"],
      "@beans/*": ["src/facade/beans/*"],

      "themes/*": ["src/themes/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"]
    }
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "jspm_packages",
    "tmp",
    "temp"
  ]
}
